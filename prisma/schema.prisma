generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
 
}

model Task{
  id Int @id @default(autoincrement())
  nome String
  descricao String
  completo Boolean
  atualizadoEm DateTime? @default(now())
  userId Int?
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User{
  id Int @id @default(autoincrement())
  nome String
  email String @unique
  senha String
  atualizadoEm DateTime? @default(now())
  status Boolean @default(true)
  Task Task[]
}

